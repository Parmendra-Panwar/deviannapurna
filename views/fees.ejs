  function filterClasses() {
    const selectedClass = document.getElementById("classFilter").value;
    const classTables = document.querySelectorAll(".class-table");

    classTables.forEach((table) => {
      if (selectedClass === "all" || table.id === selectedClass) {
        table.style.display = "block"; // Show the table
      } else {
        table.style.display = "none"; // Hide the table
      }
    });
  }

  // Initially show all class tables
  filterClasses();
</script>
